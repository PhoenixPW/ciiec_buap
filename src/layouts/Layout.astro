---
import Navbar from '../components/Navbar.astro';
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";

import "../global.css";
import MouseMoveEffect from '../components/mouse-move-effect';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col bg-background text-foreground antialiased dark scroll-smooth">
		<Navbar transition:persist/>
		<MouseMoveEffect client:idle></MouseMoveEffect>
		<slot />
		<Footer></Footer>
	</body>

	<script>

const trigger = document.getElementById('linea');
  const miTarget = document.getElementById('contenedorBotonEjes');

  const obs = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) 
        miTarget.classList.replace('opacity-0','opacity-100');
	  
    });
  }, { threshold: 0 });

  obs.observe(trigger);  
  

	</script>
</html>

