<script>
 
 var categoriaActiva = -1;
 window.mostrarSubcategorias = function(categoriaSeleccionada) {

  

  //Se cierra el submenu que se encuentra abierto actualmente
  if(categoriaActiva!=-1)
  {
    document.getElementById("c"+categoriaActiva).classList.remove("flex");
    document.getElementById("c"+categoriaActiva).classList.remove("h-full");
    document.getElementById("c"+categoriaActiva).classList.add("h-0");
    document.getElementById("c"+categoriaActiva).classList.add("hidden");
    document.getElementById("c"+categoriaActiva).classList.add("pointer-events-none");

    document.getElementById("flecha"+categoriaActiva).classList.remove("rotate-90");
    document.getElementById("flecha"+categoriaActiva).classList.add("rotate-0");
  }
  if(categoriaActiva!=categoriaSeleccionada)
  { //Se abre el submenu de la categoria seleccionada.
   document.getElementById("c"+categoriaSeleccionada).classList.remove("hidden");
   document.getElementById("c"+categoriaSeleccionada).classList.remove("pointer-events-none");
   document.getElementById("c"+categoriaSeleccionada).classList.remove("h-0");
   document.getElementById("c"+categoriaSeleccionada).classList.add("flex");
   document.getElementById("c"+categoriaSeleccionada).classList.add("h-full");
   document.getElementById("flecha"+categoriaSeleccionada).classList.add("rotate-90");
   document.getElementById("flecha"+categoriaSeleccionada).classList.remove("rotate-0");
   categoriaActiva = categoriaSeleccionada;
  }
  else
   categoriaActiva = -1;
 }

 //Se revisa si se ha abierto el menu de hamburguesa
