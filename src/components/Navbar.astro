  document.getElementById("menuCerrado").classList.remove("opacity-100");
  document.getElementById("menuCerrado").classList.add("pointer-events-none");
  document.getElementById("menuCerrado").classList.add("opacity-0");

  document.getElementById("ventanaNavbar").classList.remove("h-[105px]");
  document.getElementById("ventanaNavbar").classList.remove("xs:h-[82px]");
  document.getElementById("ventanaNavbar").classList.add("h-screen");
  
  document.getElementById("menuMobile").classList.remove("opacity-0");
  document.getElementById("menuMobile").classList.remove("pointer-events-none");
  document.getElementById("menuMobile").classList.add("opacity-100");
  document.getElementById("menuMobile").classList.add("pointer-events-auto");
  
  
 })

 //Se revisa si se ha cerrado el menu de hamburguesa
 document.getElementById("botonCerrar").addEventListener("click", (event) => {
